<Window x:Class="CapsLang.Tray.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapsLang.Tray"
        mc:Ignorable="d"
        Title="CapsLang"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanMinimize"
        ShowInTaskbar="False"
        Height="200" Width="200"
        Closed="Window_Closed" Icon="/Resources/capslang_icon_transparent.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Image Source="/Resources/capslang_icon_transparent_large.png" Margin="5"></Image>
        <TextBlock Grid.Row="1" TextWrapping="WrapWithOverflow" HorizontalAlignment="Center" VerticalAlignment="Center">
            This is a simple utility to switch the keyboard layout with the CapsLock button.
        </TextBlock>
    </Grid>
</Window>
